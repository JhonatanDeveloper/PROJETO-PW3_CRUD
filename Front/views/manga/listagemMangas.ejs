<%- include('../partials/header.ejs')  %>

    <title>LISTAGEM DE MANGAS</title>

</head>

<body>
    
    <div class="container">

        <%- include('../partials/menu.ejs')  %>

        <div class="card mt-2">
            <div class="card-header">LISTAGEM DE MANGAS</div>
        </div>

        <%
            mangas.forEach(manga=>{
        %>

            <div class="card mt-2">

                <div class="card-body">
                    <%= manga.nome_mangas %>
                </div>

                <a href="/formEdicaoMangas/<%= manga.id %>" class="btn btn-success mt-1">EDITAR</a>
                <a href="/deletarManga/<%= manga.id %>" class="btn btn-danger mt-1">EXCLUIR</a>

            </div>

        <% }) %>

    </div>

</body>

